- name: Create Alloy directories
  file:
    path: "{{ item }}"
    state: directory
    mode: 0755
  loop:
    - /etc/alloy
    - /var/lib/alloy

- name: Download Grafana Alloy
  get_url:
    url: "https://github.com/grafana/alloy/releases/download/v{{ alloy_version }}/alloy_{{ alloy_version }}_linux_amd64.tar.gz"
    dest: "/tmp/alloy_{{ alloy_version }}.tar.gz"
    checksum: "sha256:afb8c9d4e3a4d5c6e7b8a9c0d1e2f3a4b5c6d7e8f9a0b1c2d3e4f5a6b7c8d"
    mode: 0755

- name: Extract Alloy binary
  unarchive:
    src: "/tmp/alloy_{{ alloy_version }}.tar.gz"
    dest: "/usr/local/bin/"
    remote_src: yes
    extra_opts: "--strip-components=1"
    creates: "/usr/local/bin/alloy"

- name: Deploy Alloy config
  template:
    src: alloy-config.alloy.j2
    dest: /etc/alloy/config.alloy
    mode: 0644
  notify: Restart Alloy

- name: Create systemd service
  template:
    src: alloy.service.j2
    dest: /etc/systemd/system/alloy.service
    mode: 0644
  notify:
    - Reload systemd
    - Restart Alloy

- name: Enable and start Alloy service
  systemd:
    name: alloy
    state: started
    enabled: yes
    daemon_reload: yes
