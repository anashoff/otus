@charset "UTF-8";html,
body {
  height: 100%;
}

body {
  margin: 10;
/*  background: linear-gradient(45deg, #49a09d, #5f2c82);*/
  background-color:#3f868f;
  font-family: Tahoma, Verdana, Arial, sans-serif; 
/*  font-family: sans-serif;*/
  font-weight: 100;
}

.container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

table {
  width: 90%;
  margin-bottom: 20px;
  margin-left: 20px;
  margin-top: 10px;

  border-collapse: collapse;
  overflow: hidden;
  box-shadow: 0 0 20px rgba(0,0,0,0.1);
}

th,
td {
  padding: 15px;
  background-color: rgba(255,255,255,0.2);
  color: #fff;
}

th {
  text-align: left;
}

thead {
  th {
    background-color: #55608f;
  }
}

.button-style {
  display: inline-block;
  padding: 10px 15px;
  background: #77dde7;
  border: 0;
  border-radius: 7px;
  color: #333;
  text-decoration: none;
  text-align: center;
}

.button-style:hover, .button-style:focus {
  background: #1faee9; /* Эффект при наведении — дополнительное оформление */
}
